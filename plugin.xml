<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-ignoremuteswitch"
        version="1.0.0">

  <name>BackgroundAudio</name>

  <description>
    Allows your app to play audio ignoring the mute switch.
  </description>

  <license>MIT</license>

  <engines>
    <engine name="cordova" version=">=3.0.0"/>
  </engines>

  <!-- ios -->
  <platform name="ios">

    <config-file target="config.xml" parent="/*">
      <feature name="BackgroundAudio">
        <param name="ios-package" value="BackgroundAudio"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <header-file src="src/ios/BackgroundAudio.h"/>
    <source-file src="src/ios/BackgroundAudio.m"/>
  </platform>

</plugin>
